.List
  width 100%
  max-width 342px
  margin auto
  padding-bottom 9px
  animation fadinToBottom .3s ease

+prefix-classes('List__')
  .Header--logo    
    position relative
    z-index 1

    img
      margin 0 -100px -25px -25px
  
  .Header--title
    font-size 30px
    background $light
    text-align right
    color $grey
    line-height: 52px
    border-radius 3px
    width 247px
    letter-spacing -3px
    padding-right 42px

  .Header
    margin-bottom 15px
    align-items baseline    

  .Body
    background $light
    border-radius 3px
    display none
    width 100%
    padding-bottom: 9px
    animation fadinToBottom .3s ease

.Person
  height 82px
  padding-left 16px
  margin-top 9px
  animation fadinToLeft .3s ease backwards

  *
    box-sizing content-box

  & > .Flex
    width 100%

  &:nth-child(2n)
    background $light-secundary

  +prefix-classes('Person__')
    .Photo
      .Image
        padding 29px
        border-radius 50%
        border 4px solid $primary
        box-sizing border-box;
        background center center / cover
        position relative

        .Position
          color $secundary
          position absolute
          bottom -7px
          right -4px
          width 19px
          height 19px
          background $light
          border-radius 50%
          border 1.5px solid currentColor
          line-height 18px
          font-size 14px

    .Text
      padding-left 20px
      text-align left
      width 100%
      position relative

      *
        cursor default

      .Text--name
        font-size 18px
        color $primary

      .Text--description
        color $grey-light

  &:hover
    background $primary

    @media screen and (min-width 689px)
      .Tooltip
        opacity 1
        margin-left 14px
        visibility visible

    +prefix-classes('Person__')
      .Image
        border-color $light

      .Text--name
        color $light

      .Text--description
          color $scarlet

  @media screen and (min-width 689px)
    .Tooltip
      position absolute
      left 100%
      top 50%
      width 155px
      height 49px
      transform translateY(-50%)
      margin-left 0
      text-align: center
      background $light
      border-radius 3px
      opacity 0
      transition all .2s ease
      visibility hidden

      &:before
        content ''
        width 12px
        height 12px
        background $light
        border-radius 3px
        transform rotate(45deg) translateY(-50%)
        top 48%
        left -10px
        position absolute


      .Tooltip__Percentage
        color $grey-light
        font-size 24px
        line-height 33px

        &:first-child
          border-right 1px solid #772425

          span
            border-radius 3px 0 0 0

        &:last-child
          span
            border-radius 0 3px 0 0

      span
        line-height 18px
        background $primary
        color $light
        font-size 10px
        display block
        width 100%


@media screen and (max-width 690px)
  .List__Header--logo
    img
      width: 80px;

  .List__Header--title
    margin-bottom 15px
    margin-left 20px
    width 100%

  .Person
    .Tooltip
      span
        margin-right 5px
        color $secundary

    .Tooltip__Percentage
      display flex
      flex-grow unset
      margin-right 8px
      margin-top 2px
      color $primary
      font-size 10px
      font-weight normal

    &:hover
      .Tooltip
        span
          margin-right 5px
          color $scarlet

      .Tooltip__Percentage
        color $light

+prefix-classes('Empty__')
  .Title
    font-size: 30px
    color $grey
    margin-top 10px

  .Text
    margin: 5px 0 10px
    color $secundary
    padding 0 15px
    font-size 15px